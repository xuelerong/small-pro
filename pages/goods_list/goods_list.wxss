/* pages/goods_list/goods_list.wxss */

.firtarbar {
    height: 180rpx;
    border-bottom: 1px solid #4f4f4f;
    padding: 20rpx 0;
}

.navbarter {
    display: flex;
    justify-content: center;
}

.lefttarbar {
    flex: 2;
    display: flex;
    justify-content: center;
    padding: 0 20rpx;
}

.righttarbar {
    flex: 4;
    line-height: 130%;
    position: relative;
}

.tarbarname {
    /*  //将对象作为弹性伸缩盒子模型显示 */
    display: -webkit-box;
    /* /从上到下垂直排列子元素（设置伸缩盒子的子元素排列方式） */
    -webkit-box-orient: vertical;
    /* 这个属性不是css的规范属性，需要组合上面两个属性，表示显示的行数 */
    -webkit-line-clamp: 2;
    /* //超出的文本隐藏 */
    overflow: hidden;
    /* 溢出用省略号显示 */
    text-overflow: ellipsis;
}

.tarbarpric {
    position: absolute;
    bottom: -100rpx;
    color: #eb4450;
}

.lefttarbar image {
    width: 76%;
}